<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.dawrap">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".UserAuthenticationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CreateImagePost" />
        <activity
            android:name=".CreateTextPost"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".UserProfileActivity"
            android:parentActivityName=".PostActivity" />
        <activity
            android:name=".PostCommentsActivity"
            android:parentActivityName=".PostActivity" />
        <activity android:name=".BackdropContentActivity" />
        <activity android:name=".MainActivity" android:parentActivityName=".UserAuthenticationActivity"/>
        <activity android:name=".PostActivity" />
    </application>

</manifest>