<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserAuthenticationActivity"
    android:background="@color/colorPrimary"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/post_border_shape"
        android:backgroundTint="@color/white">
        <GridLayout
            android:id="@+id/auth_buttons_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:columnCount="2"
            android:rowCount="2">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_fragment_login"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Login"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:onClick="onChangeFragmentClick"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_fragment_register"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Register"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:onClick="onChangeFragmentClick"
                android:layout_column="1"
                android:layout_row="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"/>

            <View
                android:id="@+id/login_underline"
                android:layout_width="100dp"
                android:layout_height="2dp"
                style="@style/Divider"
                android:background="@color/colorPrimaryLight"
                android:visibility="visible"
                android:scaleX="0.8"
                android:layout_column="0"
                android:layout_row="1"
                android:layout_gravity="fill"/>
            <View
                android:id="@+id/register_underline"
                android:layout_width="100dp"
                android:layout_height="2dp"
                style="@style/Divider"
                android:background="@color/colorPrimaryLight"
                android:visibility="visible"
                android:scaleX="0"
                android:layout_column="1"
                android:layout_row="1"
                android:layout_gravity="fill"/>
        </GridLayout>
        <FrameLayout
            android:id="@+id/auth_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/auth_buttons_layout"/>
    </RelativeLayout>


</RelativeLayout>