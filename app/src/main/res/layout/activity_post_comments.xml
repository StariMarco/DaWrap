<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostCommentsActivity"
    android:clipToPadding="false"
    android:background="#263238"
    android:gravity="top">

    <!--                User info + share-->
    <RelativeLayout
        android:id="@+id/post_comment_top_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingTop="10dp"
        android:elevation="4dp"
        android:paddingHorizontal="5dp"
        android:outlineProvider="none"
        android:background="@color/white"
        android:clipToPadding="false">
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:background="@null"
            android:layout_centerVertical="true"
            android:onClick="onBackBtnClicked"/>
        <com.alexzh.circleimageview.CircleImageView
            android:id="@+id/image_profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/profile_img_test"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/post_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/post_comment_top_nav"
        android:elevation="0dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="3dp"
        app:cardCornerRadius="16dp"
        android:layout_marginTop="-30dp"
        android:background="@null">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:clipToPadding="false"
            android:paddingTop="30dp">



            <!--                Title-->
            <TextView
                android:id="@+id/label_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="@string/test_Title"
                android:textSize="@dimen/fontSizeTitle"
                android:textStyle="bold"
                app:fontFamily="@font/roboto"
                android:textColor="@color/colorTextPrimary"
                android:layout_marginBottom="5dp"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rowCount="3"
                android:columnCount="1"
                android:clipToPadding="false">
                <!--                Image-->
                <LinearLayout
                    android:id="@+id/image_layout"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:clipToPadding="false"
                    android:padding="10dp">
                    <com.google.android.material.card.MaterialCardView
                        android:layout_height="match_parent"
                        android:layout_width="wrap_content"
                        app:cardElevation="5dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        app:cardBackgroundColor="@null"
                        app:cardCornerRadius="5dp"
                        android:layout_gravity="center_horizontal">
                        <ImageView
                            android:id="@+id/image_post"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:background="@null"
                            android:layout_gravity="fill"
                            android:maxHeight="350dp"
                            android:scaleType="fitCenter"/>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <!--                Description-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_row="1"
                    android:layout_column="0">
                    <TextView
                        android:id="@+id/label_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorTextSecondary"
                        android:lineSpacingExtra="3dp" />
                </LinearLayout>

                <!--                Like + Comment + Save-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:layout_row="2"
                    android:layout_column="0">

                    <ImageButton
                        android:id="@+id/like_button"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_favorite_border_black_24dp"
                        android:background="@null"
                        android:scaleType="fitXY"
                        android:padding="5dp"
                        android:onClick="onLikeBtnClick"/>
                    <TextView
                        android:id="@+id/label_likes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1500"
                        android:textColor="@color/colorTextPrimary"
                        android:fontFamily="@font/roboto_bold"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"/>

                    <ImageButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_mode_comment_black_24dp"
                        android:background="@null"
                        android:scaleType="fitXY"
                        android:padding="5dp"/>
                    <TextView
                        android:id="@+id/label_comments"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12"
                        android:textColor="@color/colorTextPrimary"
                        android:fontFamily="@font/roboto_bold"
                        android:layout_gravity="center_vertical"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageButton
                            android:id="@+id/save_post_button"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_bookmark_border_black_24dp"
                            android:scaleType="fitXY"
                            android:background="@null"
                            android:layout_alignParentRight="true"
                            android:padding="5dp"
                            android:onClick="onSavePostClick"/>
                    </RelativeLayout>
                </LinearLayout>

            </GridLayout>

<!--            Touch control-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-10dp">
                <View
                    android:id="@+id/draggable_view_touch_sensor"
                    android:layout_width="200dp"
                    android:layout_height="25dp"
                    android:backgroundTint="@null"
                    android:layout_centerInParent="true"/>
                <View
                    android:id="@+id/draggable_view"
                    android:layout_width="100dp"
                    android:layout_height="8dp"
                    android:background="@drawable/post_border_shape"
                    android:backgroundTint="#263238"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

<!--    Comment-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/comment_list_layout"
        android:animateLayoutChanges="true"
        android:layout_below="@id/post_layout"
        android:layout_marginBottom="-100dp"
        android:paddingBottom="-100dp"
        android:clipToPadding="false">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/comments_listView"/>
    </LinearLayout>

<!--    Add Comment-->
    <LinearLayout
        android:id="@+id/add_comment_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:paddingHorizontal="15dp"
        android:layout_marginBottom="10dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:cardBackgroundColor="#b0bec5"
            app:cardCornerRadius="25dp"
            app:cardElevation="3dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="5dp"
                android:gravity="center_vertical">
                <com.alexzh.circleimageview.CircleImageView
                    android:id="@+id/add_comment_profile_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/profile_img_test"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="5dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Add a comment..."
                    android:background="@null"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>


</RelativeLayout>