<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingHorizontal="5dp"
    android:paddingVertical="3dp"
    android:clipToPadding="false">

    <!--POST-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:clipToPadding="false"
            android:background="@drawable/post_border_shape">

            <!--                User info + share-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">
                <com.alexzh.circleimageview.CircleImageView
                    android:id="@+id/image_profile"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_person_black_24dp"
                    />
                <TextView
                    android:id="@+id/label_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorTextPrimary" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_reply_black_24dp"
                        android:scaleX="-1"
                        android:scaleType="fitXY"
                        android:background="@null"
                        android:layout_alignParentRight="true"
                        android:padding="5dp" />
                </RelativeLayout>
            </LinearLayout>

            <!--                Title-->
            <TextView
                android:id="@+id/label_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="@string/test_Title"
                android:textSize="@dimen/fontSizeTitle"
                android:textStyle="bold"
                app:fontFamily="@font/roboto"
                android:textColor="@color/colorTextPrimary"
                android:layout_marginBottom="5dp"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rowCount="3"
                android:columnCount="1"
                android:clipToPadding="false">
                <!--                Image-->
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:clipToPadding="false"
                    android:padding="10dp">
                    <com.google.android.material.card.MaterialCardView
                        android:layout_height="match_parent"
                        android:layout_width="wrap_content"
                        app:cardElevation="5dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        app:cardBackgroundColor="@null"
                        app:cardCornerRadius="5dp"
                        android:layout_gravity="center_horizontal">
                        <ImageView
                            android:id="@+id/image_post"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:background="@null"
                            android:layout_gravity="fill"
                            android:maxHeight="350dp"
                            android:scaleType="fitCenter"/>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <!--                Description-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_row="1"
                    android:layout_column="0">
                    <CustomViews.GradientTextView
                        android:id="@+id/label_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorTextSecondary"
                        android:lineSpacingExtra="3dp"
                        android:maxLines="10" />
                </LinearLayout>

                <!--                Like + Comment + Save-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:layout_row="2"
                    android:layout_column="0">

                    <ImageButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_favorite_border_black_24dp"
                        android:background="@null"
                        android:scaleType="fitXY"
                        android:padding="5dp"/>
                    <TextView
                        android:id="@+id/lbl_likes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1500"
                        android:textColor="@color/colorTextPrimary"
                        android:fontFamily="@font/roboto_bold"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"/>

                    <ImageButton
                        android:id="@+id/btn_comment"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_mode_comment_black_24dp"
                        android:background="@null"
                        android:scaleType="fitXY"
                        android:padding="5dp"/>
                    <TextView
                        android:id="@+id/lbl_comment_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12"
                        android:textColor="@color/colorTextPrimary"
                        android:fontFamily="@font/roboto_bold"
                        android:layout_gravity="center_vertical"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageButton
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_bookmark_border_black_24dp"
                            android:scaleType="fitXY"
                            android:background="@null"
                            android:layout_alignParentRight="true"
                            android:padding="5dp"/>
                    </RelativeLayout>
                </LinearLayout>

            </GridLayout>

        </LinearLayout>
<!--    </androidx.cardview.widget.CardView>-->

</LinearLayout>